%p#notice= notice
%p
  %strong Name:
  = @article.name
%p
  %strong Body:
  = @article.body
%p
  %strong Author:
  = User.find(@article.user_id).email
%p
  %b Tags:
  = @article.tags.map { |t| t.name }.join(", ")
%h2 Comments
= render @article.comments
%h2 Add a comment:
= render "comments/form"
- if policy(@article).update?
  = link_to 'Edit', edit_article_path(@article)
  |
= link_to 'Back', articles_path
