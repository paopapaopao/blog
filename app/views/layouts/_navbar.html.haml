.navbar.navbar-expand-sm.bg-dark.navbar-dark.fixed-top.container-fluid
  / Brand/logo
  %a.navbar-brand{:href => "#"} Blog
  / Links
  %ul.navbar-nav
    - if current_user
      - if current_user.admin
        %li.nav-item
          %a.nav-link{:href => "/admin"} Admin
      %li.nav-item
        %a.nav-link{:href => "/articles"} Articles
      %li.nav-item
        %a.nav-link{:href => "/articles/new"} New Article
      %li.nav-item
        %a.nav-link{:href => "#"}= current_user.email
      %li.nav-item
        %a.nav-link{:href => "/users/sign_out", "data-method" => "delete", :rel => "nofollow", data: { confirm: 'Are you sure you want to sign out?' } } Sign out
    - else
      %li.nav-item
        %a.nav-link{:href => "/users/sign_up"} Sign up
      %li.nav-item
        %a.nav-link{:href => "/users/sign_in"} Sign in
