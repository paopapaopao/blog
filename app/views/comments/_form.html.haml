= form_for [@article, @article.comments.build] do |f|
  .form-group
    = f.label :commenter
    = f.text_field :commenter, value: current_user.email, readonly: true, class: "form-control w-50"
  .form-group
    = f.label :body
    = f.text_area :body, required: true, class: "form-control w-50"
    .valid-feedback Valid
    .invalid-feedback Invalid
  .actions
    = f.submit class: "btn btn-success"
